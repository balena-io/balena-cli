{
	"extends": ["github>balena-io/renovate-config"],
	"postUpdateOptions": ["npmDedupe"],
	"packageRules": [
    {
	  "description": "Run npm install and npm dedupe after any package update",
      "matchPackageNames": ["*"],
      "postUpgradeTasks": {
        "commands": [
		  "rm -rf node_modules",
		  "npm cache clean --force",
          "npm install",
		  "npm dedupe"
        ],
        "fileFilters": ["npm-shrinkwrap.json"],
        "executionMode": "update"
      }
    }
  ]
}
