{
	"extends": ["github>balena-io/renovate-config"],
	"postUpdateOptions": ["npmDedupe"],
	"packageRules": [
		{
			"description": "Run manual npm dedupe after github-actions updates",
			"matchManagers": ["github-actions"],
			"postUpgradeTasks": {
				"commands": ["npm dedupe --package-lock-only"],
				"fileFilters": ["npm-shrinkwrap.json"],
				"executionMode": "update"
			}
		}
	]
}
