{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"target": "es2018",
		"outDir": "build",
		"strict": true,
		"strictPropertyInitialization": false,
		"useUnknownInCatchVariables": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"typeRoots" : [
			"./node_modules/@types",
			"./node_modules/etcher-sdk/typings",
			"./typings"
		],
		"preserveSymlinks": true,
		"allowJs": true
	},
	"include": [
		"./lib/**/*",
		"./typings/**/*"
	]
}
