{
	"ts-node": {
		"experimentalResolver": true
	},
	"compilerOptions": {
		"declaration": true,
		"module": "nodenext",
		"target": "es2018",
		"outDir": "build",
		"strict": true,
		"strictPropertyInitialization": false,
		"useUnknownInCatchVariables": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"typeRoots": [
			"./node_modules/@types",
			"./node_modules/etcher-sdk/typings",
			"./typings"
		],
		"preserveSymlinks": true
	},
	"include": ["./src/**/*", "./typings/**/*"]
}
