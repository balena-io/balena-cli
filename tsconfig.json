{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"outDir": "build",
		"strict": true,
		"strictPropertyInitialization": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"typeRoots" : [
			"./node_modules/@types",
			"./node_modules/etcher-sdk/typings",
			"./typings"
		]
	},
	"include": [
		"./lib/**/*.ts"
	]
}
